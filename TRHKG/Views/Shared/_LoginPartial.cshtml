@inject Microsoft.AspNetCore.Identity.SignInManager<TRHKG.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
<form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
    <a class="nav__link" href="#aboutUs">About</a>
    <a class="nav__link" href="#pictures">Pictures</a>
    <a class="nav__link" asp-controller="Item" asp-action="List">List</a>
    <a class="nav__link" href="#ContactUSa">Contacts</a>
    <span class="nav__link">Hello, @User.Identity.Name! </span>
    <a class="nav__link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
</form> }
else
{
<a class="nav__link" href="#aboutUs">About</a>
<a class="nav__link" href="#pictures">Pictures</a>
<a class="nav__link" asp-controller="Item" asp-action="List">List</a>
<a class="nav__link" href="#ContactUSa">Contacts</a>
<a class="nav__link" id="registerLink" asp-controller="Account" asp-action="Register">Register</a>
<a class="nav__link" id="loginLink" asp-controller="Account" asp-action="Login">Sign In</a>
}







